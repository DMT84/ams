import sqlite3

conn = sqlite3.connect("monitoring.db")
cursor = conn.cursor()

# Création de la table unique pour toutes les sondes
cursor.execute("""
CREATE TABLE IF NOT EXISTS system_data (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    timestamp DATETIME DEFAULT CURRENT_TIMESTAMP,
    cpu_usage REAL,
    disk_usage REAL,
    users_connected INTEGER
)
""")

# Création de la table pour les alertes CERT
cursor.execute("""
CREATE TABLE IF NOT EXISTS cert_alerts (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    timestamp DATETIME DEFAULT CURRENT_TIMESTAMP,
    alert_text TEXT
)
""")

conn.commit()
conn.close()

print("✅ Base de données initialisée avec succès !")
